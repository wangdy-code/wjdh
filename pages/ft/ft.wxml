<view class="section">  
  <picker mode="date" value="{{date}}" start="1978-01-01" end="2099-1-23" bindchange="bindDateChange">  
    <view class="picker">  
    <button form-type="submit" class="btn">{{date}}</button>
        
    </view>  
  </picker>  
</view> 
<form bindsubmit="addwork">
  <view>
    <label><image src="/img/zhuti.png"></image></label>
    <input type="text" placeholder="项目名称..." name="theme" />
  </view>
  <view>
    <textarea placeholder="工作内容..." name="content" />
  </view>
  <button form-type="submit" class="btn">提交</button>
</form>