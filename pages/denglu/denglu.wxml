<!--pages/denglu/denglu.wxml-->
<form bindsubmit='formSubmit'>
     
        <view class='form'>
     
        <text class='label'>姓名<text class='red'>(必填)</text></text>
     
        <input class='int' name="name" placeholder="请输入真实姓名" bindinput="inputName"></input>
     
        <text class='label'>密码<text class='red'>(必填)</text></text>
     
        <input class='int'name="phone" type="number" placeholder="请输入密码"maxlength="11" bindinput="inputPhoneNum"></input>
     
        </view>
     
        <button bindtap = "dl_btn" class='submit' formType="submit" type="primary" >登陆</button>
          
     
    </form>

